<UserControl x:Class="IntelliMonWPF.Views.LoginUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IntelliMonWPF.Views"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:helper="clr-namespace:IntelliMonWPF.Helper"
             Height="450" Width="800">
    <prism:Dialog.WindowStyle>
        <Style TargetType="Window">
            <Setter Property="SizeToContent" Value="WidthAndHeight"></Setter>
            <Setter Property="ResizeMode" Value="NoResize"/>
            <Setter Property="prism:Dialog.WindowStartupLocation" Value="CenterScreen"></Setter>
        </Style>
    </prism:Dialog.WindowStyle>
    <Border Padding="50">
        <!-- 添加内边距缩小空白 -->
        <Border.Background>
            <RadialGradientBrush Center="0.5,0.5" RadiusX="0.7" RadiusY="0.7">
                <GradientStop Color="#1E3A8A" Offset="0.0" />
                <!-- 中心深蓝色 -->
                <GradientStop Color="#60A5FA" Offset="1.0" />
                <!-- 边缘浅蓝色 -->
            </RadialGradientBrush>
        </Border.Background>
        <Grid>
            <!-- 移除多余的行和列定义，直接使用单 Grid -->
            <md:Card Padding="30" Width="500" Height="350" VerticalAlignment="Center" HorizontalAlignment="Center" 
                     Background="White">
                <StackPanel Orientation="Vertical" Margin="20">
                    <!-- 标题 -->
                    <TextBlock Text="欢迎登录" Style="{StaticResource MaterialDesignHeadline6TextBlock}" 
                               HorizontalAlignment="Center" Margin="0,0,0,20" Foreground="#1E3A8A" />

                    <!-- 用户名输入框 -->
                    <TextBox md:HintAssist.Hint="用户名" Margin="0,10" Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" />

                    <!-- 密码输入框 -->
                    <PasswordBox md:HintAssist.Hint="密码" Margin="0,10" Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" helper:PassWordBoxHelper.PassWord="{Binding Pwd,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>

                    <!-- 登录按钮 -->
                    <Button Content="登录" Style="{StaticResource MaterialDesignRaisedButton}" Command="{Binding LoginCommand}"
                            Margin="0,20,0,10" Width="150" HorizontalAlignment="Center" Background="#1E3A8A" BorderBrush="#1E3A8A" />

                    <!-- 注册链接 -->
                    <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0">
                        <Run Text="还没有账号？" Foreground="#666" />
                        <Hyperlink NavigateUri="RegisterPage" Foreground="#60A5FA" Command="{Binding RegisterCommand}">立即注册</Hyperlink>
                    </TextBlock>
                </StackPanel>
            </md:Card>
        </Grid>
    </Border>
</UserControl>