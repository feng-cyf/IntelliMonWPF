<Window x:Class="IntelliMonWPF.Views.Page.ApiLoggingMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IntelliMonWPF.Views.Page"
        mc:Ignorable="d"
       Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="{TemplateBinding Background}" Height="38">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10 0" Height="30" Width="100"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Foreground" Value="DodgerBlue"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Border>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="4.5*" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Background="#F0F0F0">
                <TextBlock Text="请求日志导航" FontSize="16" FontWeight="Light" Margin="8"/>
                <RadioButton Content="设备Api请求日志" Margin="8" IsChecked="True" Tag="data1"  Click="RadioButton_Checked"/>
                <RadioButton Content="点表Api请求日志" Margin="8" Tag="data2"  Click="RadioButton_Checked"/>
                <RadioButton Content="Excel请求日志" Margin="8" Tag="data3"  Click="RadioButton_Checked"/>
                <RadioButton Content="设备配置日志" Margin="8" Tag="data4"  Click="RadioButton_Checked"/>
                <RadioButton Content="点表配置日志" Margin="8" Tag="data5"  Click="RadioButton_Checked"/>
                <RadioButton Content="历史消息" Margin="8" Tag="data6"  Click="RadioButton_Checked"/>
            </StackPanel>
            <ScrollViewer  Grid.Column="1" MaxHeight="450" VerticalScrollBarVisibility="Hidden">
                <Frame Source="/IntelliMonWPF;component/Views/Page/ApiPage.xaml"
                       NavigationUIVisibility="Hidden"
                       x:Name="frame" />
            </ScrollViewer>
        </Grid>
    </Border>
</Window>
