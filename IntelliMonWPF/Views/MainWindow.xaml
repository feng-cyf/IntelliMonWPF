<Window x:Class="IntelliMonWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IntelliMonWPF"
        mc:Ignorable="d"
        xmlns:prism="http://prismlibrary.com/"
       WindowStyle="None"
        AllowsTransparency="False"
        WindowStartupLocation="CenterScreen"
        Height="1000" Width="1400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <!-- 标题栏高度 -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0">
            <Button Width="60" Height="40" Margin="5"
            Background="#FF4E6EF2"  
                Foreground="White"
            BorderBrush="Transparent" Command="{Binding GoBackCommand}"
            Cursor="Hand">
                <Image Source="/Image/后退.png" Width="20" Height="20"/>
            </Button>

            <!-- 前进按钮 -->
            <Button Width="60" Height="40" Margin="5"
            Background="#FF4EC87A"  
                Foreground="White"
            BorderBrush="Transparent" Command="{Binding GoForwardCommand}"
            Cursor="Hand">
                <Image Source="/Image/前进.png" Width="20" Height="20"/>
            </Button>

            <!-- 弹窗关闭按钮 -->
            <Button Width="60" Height="40" Margin="5" DockPanel.Dock="Right"
            Background="#FFF25E4E" Command="{Binding CloseWindowCommand}"
                Foreground="White" BorderBrush="Transparent" Cursor="Hand">
                <Image Source="/Image/弹窗关闭.png" Width="20" Height="20"/>
            </Button>

            <!-- 弹窗按钮 -->
            <Button Width="60" Height="40" Margin="5" DockPanel.Dock="Right"
            Background="#FFF2C94E" Command="{Binding MaxWindowCommand}"
                Foreground="White" BorderBrush="Transparent" Cursor="Hand">
                <Image Source="/Image/popup.png" Width="20" Height="20"/>
            </Button>

            <!-- 最小化按钮 -->
            <Button Width="60" Height="40" Margin="5" DockPanel.Dock="Right"
            Background="#FF6E6EF2"  Command="{Binding MinWindowCommand}"
                Foreground="White" BorderBrush="Transparent" Cursor="Hand">
                <Image Source="/Image/24gl-minimization.png" Width="20" Height="20"/>
            </Button>
            <TextBlock VerticalAlignment="Center" FontSize="20" DockPanel.Dock="Left" Margin="10 0 0 0">
                    <Run Text="你好"></Run>
                    <Run Text="{Binding Job}"></Run>
                    <Run Text="{Binding Name}"></Run>
            </TextBlock>
            <TextBlock DockPanel.Dock="Right" VerticalAlignment="Center" FontSize="20" Margin="0 0 60 0" HorizontalAlignment="Center">
                <Run Text="当前时间:"></Run>
                <Run Text="{Binding Time}"></Run>
            </TextBlock>
        </DockPanel>
        <!-- 主体内容区域 -->
        <Grid Grid.Row="1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 左侧导航栏 -->
        <Border Grid.Column="0" Background="#2C3E50">
            <StackPanel>
                <TextBlock Text="功能导航" Foreground="White" FontSize="16" FontWeight="Bold" Margin="15,10,0,10"/>

                <!-- 导航菜单 -->
                <ListBox x:Name="NavigationList" 
                         Background="Transparent" 
                         BorderThickness="0"
                         Foreground="White"
                         ItemsSource="{Binding NavigationItems}"
                         SelectedItem="{Binding SelectedNavigationItem}"
                         Margin="0,10,0,0">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Padding" Value="15,12"/>
                            <Setter Property="FontSize" Value="14"/>
                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#34495E"/>
                                    <Setter Property="Foreground" Value="#3498DB"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#34495E"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" >
                                <TextBlock Text="{Binding Icon}" Margin="0,0,10,0" FontFamily="Segoe MDL2 Assets"/>
                                <TextBlock Text="{Binding Title}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Border>

        <!-- 右侧内容区域 -->
            <ContentControl prism:RegionManager.RegionName="Regions" Grid.Column="1"></ContentControl>
    </Grid>
   </Grid>
</Window>
