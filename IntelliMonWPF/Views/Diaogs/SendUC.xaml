<UserControl x:Class="IntelliMonWPF.Views.Diaogs.SendUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
            Height="600" Width="400"
             Background="Transparent">
    <UserControl.Resources>
        <!-- 阴影 -->
        <DropShadowEffect x:Key="DropShadowEffect"
                      ShadowDepth="2"
                      Direction="270"
                      BlurRadius="10"
                      Opacity="0.25"/>

        <!-- 渐变背景 -->
        <LinearGradientBrush x:Key="LinearGradientBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Offset="0" Color="#3498db"/>
            <GradientStop Offset="1" Color="#2980b9"/>
        </LinearGradientBrush>

        <!-- 卡片边框 -->
        <Style x:Key="CardBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect" Value="{StaticResource DropShadowEffect}"/>
        </Style>

        <!-- 标签 -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#333333"/>
        </Style>

        <!-- 输入控件 -->
        <Style x:Key="InputStyle" TargetType="Control">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="MinHeight" Value="36"/>
            <Setter Property="BorderBrush" Value="#D0D0D0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="#FAFAFA"/>
            <Style.Triggers>
                <Trigger Property="IsKeyboardFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#3498db"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#A0C4FF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ComboBox样式 -->
        <Style x:Key="ComboBoxStyle" TargetType="ComboBox" BasedOn="{StaticResource InputStyle}">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="MinHeight" Value="36"/>
        </Style>

        <!-- 按钮样式 -->
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3498db"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                             CornerRadius="8"
                             BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980b9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1f6a8c"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <!-- 阴影 + 渐变背景 -->
    <Border CornerRadius="12" Margin="20">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Offset="0" Color="#81D4FA"/>
                <GradientStop Offset="1" Color="#4FC3F7"/>
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <!-- 标题栏 -->
            <Border Grid.Row="0"
                    Background="{StaticResource LinearGradientBrush}"
                    CornerRadius="12 12 0 0"
                    Padding="20,15"
                    Effect="{StaticResource DropShadowEffect}">
                <TextBlock Text="发送数据控制"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Foreground="White"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>
            </Border>

            <!-- 内容区 -->
            <ScrollViewer Grid.Row="1"
                          Margin="25,20"
                          VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="0,10">
                    <!-- 设备名称 -->
                    <Border Style="{StaticResource CardBorderStyle}" Margin="0,0,0,15">
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" MinWidth="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="设备名称：" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Grid.Column="1"
                                       Text="{Binding Name}"
                                       Padding="12,10"
                                       TextTrimming="CharacterEllipsis"/>
                        </Grid>
                    </Border>

                    <!-- 起始地址 -->
                    <Border Style="{StaticResource CardBorderStyle}" Margin="0,0,0,15">
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" MinWidth="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="从站地址：" Style="{StaticResource LabelStyle}"/>
                            <TextBox Grid.Column="1"
                                     x:Name="tbStartAddress"
                                     Style="{StaticResource InputStyle}"
                                     Padding="12,10"
                                     Text="{Binding SlaveId}"
                                     ToolTip="输入起始地址"/>
                        </Grid>
                    </Border>
                    <!-- 起始地址 -->
                    <Border Style="{StaticResource CardBorderStyle}" Margin="0,0,0,15">
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" MinWidth="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="起始地址：" Style="{StaticResource LabelStyle}"/>
                            <TextBox Grid.Column="1"
                                     Style="{StaticResource InputStyle}"
                                     Padding="12,10"
                                     Text="{Binding StartAddress}"
                                     ToolTip="输入起始地址"/>
                        </Grid>
                    </Border>

                    <!-- 功能码 -->
                    <Border Style="{StaticResource CardBorderStyle}" Margin="0,0,0,15">
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" MinWidth="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="功能码：" Style="{StaticResource LabelStyle}"/>
                            <ComboBox Grid.Column="1"
                                      x:Name="cbFunctionCode"
                                      ItemsSource="{Binding SelectedFuctionList}"
                                      SelectedItem="{Binding SelectFuction}"
                                      DisplayMemberPath="Value"
                                      Style="{StaticResource ComboBoxStyle}">
                            </ComboBox>
                        </Grid>
                    </Border>
                    <!-- 发送数据 -->
                    <Border Style="{StaticResource CardBorderStyle}" Margin="0,0,0,15">
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" MinWidth="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="发送数据：" Style="{StaticResource LabelStyle}"/>
                            <TextBox Grid.Column="1"
                                     x:Name="tbSendData"
                                     Style="{StaticResource InputStyle}"
                                     MinHeight="90"
                                     AcceptsReturn="True"
                                     Padding="12,10"
                                     Text="{Binding SendData}"
                                     ToolTip="多个数据用逗号或者空格分隔"/>
                        </Grid>
                    </Border>

                    <!-- 发送日志 -->
                    <Border Style="{StaticResource CardBorderStyle}" Margin="0,0,0,15">
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" MinWidth="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="发送日志：" Style="{StaticResource LabelStyle}"/>
                            <ScrollViewer Grid.Column="1"
                                          Height="120"
                                          Background="#F2F2F2"
                                          VerticalScrollBarVisibility="Auto">
                                <TextBox x:Name="tbLog"
                                         IsReadOnly="True"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         FontSize="12"
                                         Padding="10"
                                         Text="等待发送..."/>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </StackPanel>
            </ScrollViewer>
            <materialDesign:Snackbar
                     x:Name="MySnackbar"
                     MessageQueue="{Binding MessageQueue}"
                     VerticalAlignment="Bottom"
                     HorizontalAlignment="Center"
                     Margin="10"
                         Height="100"
                         Width="100"
                    Grid.Row="1"
                     Background="Black"
                     Foreground="White"/>
             <!-- 按钮区 -->
            <Border Grid.Row="2"
                    Background="#F5F8FF"
                    CornerRadius="0 0 12 12"
                    Padding="20">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <Button x:Name="btnSend"
                            Content="发送"
                            Width="120"
                            Height="40"
                            FontSize="14"
                            Command="{Binding SendCmd}"
                            Style="{StaticResource ButtonStyle}"
                            Margin="0,0,15,0"/>
                    <Button x:Name="btnCancel"
                            Content="取消"
                            Width="120"
                            Height="40"
                            FontSize="14" Command="{Binding CloseCmd}"
                            Style="{StaticResource ButtonStyle}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</UserControl>