<UserControl x:Class="IntelliMonWPF.Views.RegisterUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IntelliMonWPF.Views"
             mc:Ignorable="d" 
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:helper="clr-namespace:IntelliMonWPF.Helper"
            Height="404" Width="400">
    <Border>
        <Border.Background>
            <RadialGradientBrush Center="0.5,0.5" RadiusX="0.7" RadiusY="0.7">
                <GradientStop Color="#1E3A8A" Offset="0.0" />
                <!-- 中心深蓝色 -->
                <GradientStop Color="#60A5FA" Offset="1.0" />
                <!-- 边缘浅蓝色 -->
            </RadialGradientBrush>
        </Border.Background>
        <Grid>

            <StackPanel Orientation="Vertical" Margin="20">
                <!-- 标题 -->
                <TextBlock Text="欢迎注册" Style="{StaticResource MaterialDesignHeadline6TextBlock}" 
                            HorizontalAlignment="Center" Margin="0,0,0,20" Foreground="#1E3A8A" />
                <!-- 用户名输入框 -->
                <TextBox md:HintAssist.Hint="用户名" Margin="0,10" Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                            Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" />
                <!-- 密码输入框 -->
                <PasswordBox md:HintAssist.Hint="密码" Margin="0,10" Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" helper:PassWordBoxHelper.PassWord="{Binding Pwd,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
                <PasswordBox md:HintAssist.Hint="确认密码" Margin="0,10" Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" helper:PassWordBoxHelper.PassWord="{Binding ConfirmPwd,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="职位选择 :" Opacity="0.5"></TextBlock>
                    <ComboBox Width="200" ItemsSource="{Binding JobName}" DisplayMemberPath="Value" SelectedValuePath="Key" VerticalAlignment="Center" SelectedItem="{Binding SelectId}"/>
                </StackPanel>
                <!-- 注册按钮 -->
                <Button Content="注册" Style="{StaticResource MaterialDesignRaisedButton}" Command="{Binding RegisterCmd}"
                        Margin="0,20,0,10" Width="150" HorizontalAlignment="Center" Background="#1E3A8A" BorderBrush="#1E3A8A" />
                <!-- 登录链接 -->
                <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Run Text="已有账号？" Foreground="#666" />
                    <Hyperlink NavigateUri="LoginPage" Foreground="#60A5FA" Command="{Binding CloseCmd}">立即登录</Hyperlink>
                </TextBlock>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
